<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.iei.hotel.guestroom.mapper.GuestRoomMapper">
 	<sql id="guestRoomColumns">
 		  guestRoomName
 		, guestRoomContents1
 		, guestRoomContents2
 		, guestRoomService1
 		, guestRoomService2
 		, guestRoomAmenity
 		, guestRoomInformation
 		, guestRoomImage1
 		, guestRoomImage2
 		, guestRoomImage3
 		, guestRoomImage4
 	</sql>
 	
 	<!-- 객실 관리 리스트 -->
 	<select id="guestRoomAdminList" resultType="kr.iei.hotel.guestroom.vo.GuestRoomVO">
 		SELECT *
 		FROM guestRoomInfo
 	</select>
 	<!-- 객실 정보 추가 -->
 	<insert id="guestRoomInfoInsert" parameterType="kr.iei.hotel.guestroom.vo.GuestRoomVO">
		INSERT INTO
		guestRoomInfo (
			<include refid="guestRoomColumns"/>
		) VALUES (
			  #{guestRoomName}
			, #{guestRoomContents1}
			, #{guestRoomContents2}
			, #{guestRoomService1}
			, #{guestRoomService2}
			, #{guestRoomAmenity}
			, #{guestRoomInformation}
			, #{guestRoomImage1}
			, #{guestRoomImage2}
			, #{guestRoomImage3}
			, #{guestRoomImage4}
		)
	</insert>
	<!-- 객실 정보 삭제 -->
	<delete id="guestRoomInfoDelete" parameterType="String">
		DELETE
		FROM guestRoomInfo
		WHERE guestRoomName = #{guestRoomName}
	</delete>
 </mapper>